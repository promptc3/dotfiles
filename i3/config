# Pulse Audio controls
set $volumepath ~/.config/i3/i3-volume
# Amount to increase/decrease volume as a percentage (used with -i, -d)
set $volumestep 5
# Using pulseaudio-utils (append "-s $sinkname" without quotes to override default sink)
bindsym XF86AudioRaiseVolume exec $volumepath/volume -np -i $volumestep 
bindsym XF86AudioLowerVolume exec $volumepath/volume -np -d $volumestep 
bindsym XF86AudioMute        exec $volumepath/volume -mn -t

# # Sreen brightness controls
bindsym XF86MonBrightnessUp exec brightness+
bindsym XF86MonBrightnessDown exec brightness-

# # Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF87AudioPrev exec playerctl previous

# i3 gaps
gaps inner 8
gaps outer 2
smart_gaps on

# applications
exec_always compton -f
exec --no-startup-id exec synclient TouchpadOff=0
exec --no-startup-id pulseaudio --start

